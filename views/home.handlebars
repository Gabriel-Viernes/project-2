{{#if images}}
<style>
    .main-container {
        flex-direction: row;
    }
</style>
{{else}}
<style>
    .main-container {
        flex-direction: column;
    }
</style>
{{/if}}

<section class="home">
    <div class="formcontainer">
        <form class="form" action="https://joosbox-9e68743f6da7.herokuapp.com/api/images" method="post" enctype="multipart/form-data">
            <label class="upload" for="upload">Upload</label>
            <input type="file" id="upload" name="upload">
            <input class="submit" type="submit" value="Submit">
        </form>
    </div>

<section class="homecontainer">
    {{#each images as |image| }}
    <div class="content">
    <span class="imagecontainer">
        <img class='homeimage' src='/images/{{image.filename}}' alt="image">
    </span>
    <div>
        {{image.user.user}}
    </div>
    </div>
    {{/each}}
</section>
<script src="/js/logout.js"></script>
</section>